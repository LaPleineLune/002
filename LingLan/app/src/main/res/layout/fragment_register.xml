<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_password">

    <!--<include layout="@layout/page_head" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp38"
        android:background="@color/gray_orange">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dp50"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="@dimen/dp12"
                android:layout_height="@dimen/dp24"
                android:layout_centerInParent="true"
                android:src="@drawable/back" />
        </RelativeLayout>

        <TextView
            style="@style/title_text_style"
            android:text="@string/login_text" />
        <!--register_text-->

        <include
            layout="@layout/divider_general"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!--<include layout="@layout/page_head" />-->

    <include
        android:id="@+id/vpn"
        layout="@layout/verify_phone_number" />

    <TextView
        android:id="@+id/register_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vpn"
        android:layout_marginTop="@dimen/dp24"
        android:paddingLeft="@dimen/dp20"
        android:textColor="@color/base_color_orange"
        android:text="@string/agreed_as_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/register_deal"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:id="@+id/third_fast_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="0dip"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/indicatorColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/indicatorColor"
                android:layout_margin="@dimen/dp10"
                android:text="@string/login_by_sns_accounts" />

            <ImageView
                android:layout_width="0dip"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/indicatorColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_login_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/qq_login_icon"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:focusable="true"
                android:src="@drawable/login_qq_icon"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/weichat_login_icon"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:focusable="true"
                android:src="@drawable/login_weichat_icon" />

            <ImageButton
                android:id="@+id/sina_login_icon"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:focusable="true"
                android:src="@drawable/login_weibo_icon"
                android:visibility="gone"/>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>