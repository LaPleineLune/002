<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp16"
    android:paddingRight="@dimen/dp16"
    android:paddingTop="@dimen/dp12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_homepage_subject_logo"
            android:layout_width="@dimen/dp84"
            android:layout_height="@dimen/dp64"
            android:layout_gravity="center_vertical"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_homepage_subject_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="标题"
                android:textColor="@color/text_title_color"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_homepage_subject_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp10"
                android:paddingTop="@dimen/dp10"
                android:singleLine="true"
                android:text="最新文章的标题"
                android:textColor="@color/read_text_title_color"
                android:textSize="@dimen/sp14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp10">
                <TextView
                    android:id="@+id/tv_homepage_subject_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="日期"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_homepage_subject_new"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:paddingTop="1dp"
                    android:gravity="center_horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp6"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="新"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp10"
                    android:background="@drawable/frame_red_new"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginTop="@dimen/dp10"
        android:background="#cccccc" />
</LinearLayout>