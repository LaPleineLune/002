<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/light_gray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/clinical"
            android:textColor="@color/gray"
            android:textSize="@dimen/sp18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottom_search"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:layout_alignParentRight="true"
            android:src="@drawable/search1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_clinical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/go_clinical_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="跳转到病历详情页"
            android:visibility="gone"/>

        <com.chanven.lib.cptr.PtrClassicFrameLayout
            xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/recycler_view_clinical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cube_ptr:ptr_duration_to_close="200"
            cube_ptr:ptr_duration_to_close_header="700"
            cube_ptr:ptr_keep_header_when_refresh="true"
            cube_ptr:ptr_pull_to_fresh="false"
            cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
            cube_ptr:ptr_resistance="1.8">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_clinical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.chanven.lib.cptr.PtrClassicFrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:paddingRight="@dimen/dp20"
            android:paddingBottom="@dimen/dp20"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_clinical_create"
                style="@style/ExpandableItemStyleHeader"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp36"
                android:text="新建"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />

            <Button
                android:id="@+id/bt_clinical_photograph"
                style="@style/ExpandableItemStyleHeader"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp36"
                android:text="拍照"
                android:textColor="@color/white"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

    </RelativeLayout>

    <include
        layout="@layout/layout_no_network"
        android:visibility="gone" />

</LinearLayout>
