<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_clinical_reference"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp6"
            android:paddingBottom="@dimen/dp6"
            android:background="@drawable/bg_bottom_textview"
            android:drawableTop="@drawable/reference"
            android:gravity="center"
            android:text="临证参考"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp14" />

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="74dp"
            android:layout_centerInParent="true"
            android:background="@drawable/clinical_div_line"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_weichat_flup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp6"
            android:paddingBottom="@dimen/dp6"
            android:background="@drawable/bg_bottom_textview"
            android:drawableTop="@drawable/follow_up"
            android:gravity="center"
            android:text="微信随访"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp14"
            android:visibility="gone"/>

        <View
            android:layout_width="@dimen/px1"
            android:layout_height="74dp"
            android:layout_centerInParent="true"
            android:background="@drawable/clinical_div_line" />

        <TextView
            android:id="@+id/tv_tcm_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp6"
            android:paddingBottom="@dimen/dp6"
            android:background="@drawable/bg_bottom_textview"
            android:drawableTop="@drawable/tcm_search_icon"
            android:gravity="center"
            android:text="中医搜搜"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp14" />

    </LinearLayout>



</LinearLayout>