<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <include layout="@layout/all_subject_page_head"/>

    <ScrollView
        android:id="@+id/scrollview_all_subject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--头部的排序选择-->
            <LinearLayout
                android:id="@+id/ll_order_header"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp0"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp16"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_default_sort"
                        android:layout_width="@dimen/dp64"
                        android:layout_height="@dimen/dp22"
                        android:gravity="center"
                        android:text="默认排序"
                        android:background="@drawable/wire_frame"
                        android:textColor="@color/gray_orange"
                        android:textSize="@dimen/sp12"/>

                    <com.android.linglan.widget.FlowLayout
                        android:id="@+id/fl_default_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_gravity="center">
                    </com.android.linglan.widget.FlowLayout>

                    <!--android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:padding="16dp"-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp16"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_all_classify"
                        android:layout_width="@dimen/dp64"
                        android:layout_height="@dimen/dp22"
                        android:gravity="center"
                        android:text="全部分类"
                        android:background="@drawable/wire_frame"
                        android:textColor="#c33c12"
                        android:textSize="@dimen/sp12" />

                    <com.android.linglan.widget.FlowLayout
                        android:id="@+id/fl_all_classify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp8"
                        android:layout_gravity="center">
                    </com.android.linglan.widget.FlowLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:gravity="center"
                    android:src="@drawable/order"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/invis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp10"
                android:background="@color/white"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp10"
                    android:gravity="center"
                    android:src="@drawable/order"/>

            </LinearLayout>

            <!--专题下的专题列表-->
            <com.android.linglan.widget.GridViewForScrollView
                android:id="@+id/gv_all_subject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp6"
                android:paddingRight="@dimen/dp6"
                android:cacheColorHint="#00000000"
                android:columnWidth="@dimen/dp6"
                android:stretchMode="columnWidth"
                android:numColumns="2"
                android:listSelector="@null"
                android:horizontalSpacing="@dimen/px1"
                android:verticalSpacing="@dimen/px1"
                android:scrollbars="none" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>