<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp120"
        android:layout_marginLeft="@dimen/dp46"
        android:layout_marginRight="@dimen/dp46"
        android:layout_marginTop="@dimen/dp120"
        android:background="@drawable/frame_grey_wane"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_description"
            android:layout_width="@dimen/dp18"
            android:layout_height="@dimen/dp18"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp12"
            android:src="@drawable/radio_special_description" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginBottom="@dimen/dp30"
                android:lineSpacingMultiplier="1.3"
                android:paddingLeft="@dimen/dp30"
                android:paddingRight="@dimen/dp30"
                android:textColor="@color/gray"
                android:textSize="@dimen/sp14" />

        </ScrollView>

    </LinearLayout>


    <!--android:text="@string/clinical_instruction"-->

</LinearLayout>