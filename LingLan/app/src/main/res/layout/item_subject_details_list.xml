<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/subject_related_articles"
            style="@style/project_detail_item_label_style"
            android:layout_marginBottom="@dimen/dp6"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp18"
            android:drawableLeft="@drawable/subject_detail_article_icon"
            android:text="相关文章"
            android:textColor="@drawable/main_tab_text_color"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/subject_related_fm"
            style="@style/project_detail_item_label_style"
            android:layout_marginBottom="@dimen/dp6"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_marginTop="@dimen/dp18"
            android:drawableLeft="@drawable/subject_detail_fm_icon"
            android:text="相关音频"
            android:paddingLeft="@dimen/dp76"
            android:textColor="@drawable/main_tab_text_color"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
    <View
        android:id="@+id/view_subject_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/french_grey" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_subject_details_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_div" />

</LinearLayout>