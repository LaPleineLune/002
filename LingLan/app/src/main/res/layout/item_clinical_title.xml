<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="#fafafa"
        android:orientation="horizontal">

        <com.android.linglan.widget.sortlistview.ClearEditText
            android:id="@+id/filter_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="4"
            android:background="@drawable/search_wire_frame"
            android:drawableLeft="@drawable/search_bar_icon_normal"
            android:drawablePadding="@dimen/dp4"
            android:hint="搜索病历"
            android:singleLine="true"
            android:textSize="@dimen/sp14" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/bg_bottom_textview"
            android:text="搜索"
            android:textColor="@color/carminum"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clinical_thoroughfare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_search"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_textview"
                android:drawableTop="@drawable/article_write_note"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center"
                android:paddingTop="@dimen/dp6"
                android:text="代整理病历"
                android:textColor="@color/french_grey"
                android:textSize="@dimen/sp12"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_textview"
                android:drawableTop="@drawable/article_write_like"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center"
                android:paddingTop="@dimen/dp6"
                android:text="临证参考"
                android:textColor="@color/french_grey"
                android:textSize="@dimen/sp12" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_textview"
                android:drawableTop="@drawable/article_write_collect"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center"
                android:paddingTop="@dimen/dp6"
                android:text="微信随访"
                android:textColor="@color/french_grey"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/article_write_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_textview"
                android:drawableTop="@drawable/article_write_share"
                android:drawablePadding="@dimen/dp6"
                android:gravity="center"
                android:paddingTop="@dimen/dp6"
                android:text="扩展"
                android:textColor="@color/french_grey"
                android:textSize="@dimen/sp12" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp16"
        android:text="全部病历"/>

</LinearLayout>