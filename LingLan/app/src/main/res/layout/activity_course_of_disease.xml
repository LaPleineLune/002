<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/page_head"
        layout="@layout/page_head" />

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars="none">-->

        <RelativeLayout
            android:id="@+id/rl_course_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_clinical_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp12"
                        android:drawableLeft="@drawable/visit_time"
                        android:drawablePadding="@dimen/dp6"
                        android:text="就诊时间"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/sp16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-04-11"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/gainsboro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp12"
                        android:drawableLeft="@drawable/disease_generalization"
                        android:drawablePadding="@dimen/dp6"
                        android:text="病症概括"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/sp16" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入病症概括"
                        android:textColor="@color/text_title_color"
                        android:textColorHint="@color/gainsboro"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/gainsboro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp12"
                        android:drawableLeft="@drawable/related_pictures"
                        android:drawablePadding="@dimen/dp6"
                        android:text="相关图片"
                        android:textColor="@color/text_title_color"
                        android:textSize="@dimen/sp16" />

                    <!--此处应改为横向的ListView或者是GridView-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/add_related_pictures" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/gainsboro" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp12"
                        android:paddingTop="@dimen/dp16">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/pathography"
                            android:drawablePadding="@dimen/dp6"
                            android:text="病情记录"
                            android:textColor="@color/text_title_color"
                            android:textSize="@dimen/sp16" />

                        <TextView
                            android:id="@+id/tv_clinical_mould"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:paddingRight="@dimen/dp12"
                            android:text="[模板]"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/sp14" />
                    </RelativeLayout>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请输入病症概括"
                        android:textColor="@color/text_title_color"
                        android:textColorHint="@color/gainsboro"
                        android:textSize="@dimen/sp16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px1"
                    android:layout_marginBottom="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/gainsboro" />
            </LinearLayout>
            </ScrollView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:layout_alignParentBottom="true"
                android:background="@color/whitesmoke"
                android:textColor="@color/french_grey"
                android:textSize="@dimen/sp16"
                android:text="删除病程"/>

        </RelativeLayout>
    <!--</ScrollView>-->

    <include
        layout="@layout/layout_no_network"
        android:visibility="gone" />

</LinearLayout>