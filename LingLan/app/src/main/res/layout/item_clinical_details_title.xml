<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp10"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_classify1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp4"
                android:layout_marginRight="@dimen/dp10"
                android:drawablePadding="@dimen/dp4"
                android:drawableLeft="@drawable/tag"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp2"
                android:paddingTop="@dimen/dp2"
                android:background="@drawable/frame_original"
                android:textSize="@dimen/sp14"
                android:textColor="@color/carminum"
                android:text="分类"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_classify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp4"
                android:drawableLeft="@drawable/tag"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp2"
                android:paddingTop="@dimen/dp2"
                android:background="@drawable/frame_original"
                android:textSize="@dimen/sp14"
                android:textColor="@color/carminum"
                android:text="分类"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp6"
            android:paddingTop="@dimen/dp4"
            android:drawableLeft="@drawable/patient_info"
            android:textSize="@dimen/sp16"
            android:textColor="@color/text_title_color"
            android:text="患者信息"/>

        <RelativeLayout
            android:id="@+id/rl_patient_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp12"
            android:paddingBottom="@dimen/dp10">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp30"
                android:textSize="@dimen/sp16"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_title_color"
                android:text="" />
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_name"
                android:layout_marginRight="@dimen/dp30"
                android:textSize="@dimen/sp14"
                android:textColor="@color/gray"
                android:text=""/>
            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_sex"
                android:textSize="@dimen/sp14"
                android:textColor="@color/gray"
                android:text=""/>
            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp28"
                android:src="@drawable/me_arrow_right"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:drawablePadding="@dimen/dp6"
            android:drawableLeft="@drawable/progress_note"
            android:textSize="@dimen/sp16"
            android:textColor="@color/text_title_color"
            android:text="患者病程"/>

        <TextView
            android:id="@+id/tv_clinical_sort"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingTop="@dimen/dp16"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:drawablePadding="@dimen/dp6"
            android:drawableRight="@drawable/clinical_sort_desc"
            android:background="@drawable/bg_bottom_textview"
            android:textSize="@dimen/sp16"
            android:textColor="@color/blue"
            android:text="时间"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp16"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:drawablePadding="@dimen/dp6"
        android:drawableLeft="@drawable/progress_note"
        android:textSize="@dimen/sp16"
        android:textColor="@color/text_title_color"
        android:text="患者病程"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/gainsboro" />

</LinearLayout>