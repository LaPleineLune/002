<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp6"
                android:drawableTop="@drawable/share_weixin"
                android:background="@drawable/bg_bottom_textview"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="微信" />

            <TextView
                android:id="@+id/tv_weixin_circle"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp6"
                android:drawableTop="@drawable/share_weixin_circle"
                android:background="@drawable/bg_bottom_textview"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="朋友圈" />

            <TextView
                android:id="@+id/tv_download"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dp6"
                android:drawableTop="@drawable/radio_play_download"
                android:background="@drawable/bg_bottom_textview"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="下载" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gainsboro" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:gravity="center"
            android:paddingTop="@dimen/dp4"
            android:paddingBottom="@dimen/dp4"
            android:background="@drawable/bg_bottom_textview"
            android:text="取消"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</LinearLayout>