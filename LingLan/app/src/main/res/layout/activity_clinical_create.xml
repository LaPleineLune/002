<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:id="@+id/page_head"
        layout="@layout/page_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/ll_clinical_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp16"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_patient_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp6"
                        android:drawableLeft="@drawable/patient_info"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/text_title_color"
                        android:text="患者信息"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp12"
                        android:paddingBottom="@dimen/dp10"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp16"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/gray"
                            android:text="姓名" />
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="7"
                            android:background="@null"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/text_title_color"
                            android:hint="请输入患者名字"
                            android:textColorHint="@color/gainsboro"/>
                        <TextView
                            android:id="@+id/tv_create_spread"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp50"
                            android:drawableRight="@drawable/spread"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/blue"
                            android:text="详细"/>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:layout_width="@dimen/dp50"
                    android:layout_height="@dimen/dp50"
                    android:gravity="center"
                    android:background="@drawable/patient_relevance_bg"
                    android:paddingTop="@dimen/dp6"
                    android:paddingBottom="@dimen/dp6"
                    android:drawableTop="@drawable/patient_relevance"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="关联"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp12" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_create_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp14"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp16"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/gray"
                        android:text="性别"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="@dimen/dp6"
                            android:gravity="center"
                            android:text="男"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/radiobutton_sex_text"
                            android:button="@drawable/radiobutton_sex_bg"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp30"
                            android:paddingLeft="@dimen/dp6"
                            android:gravity="center"
                            android:text="女"
                            android:textSize="@dimen/sp16"
                            android:textColor="@color/radiobutton_sex_text"
                            android:button="@drawable/radiobutton_sex_bg"/>
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp24"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp16"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/gray"
                        android:text="年龄"/>
                    <EditText
                        android:layout_width="@dimen/dp40"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:background="@null"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/text_title_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/gainsboro"
                        android:text="岁"/>
                    <!--android:textColor="@color/text_title_color"-->
                    <EditText
                        android:layout_width="@dimen/dp40"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:background="@null"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/text_title_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/gainsboro"
                        android:text="月"/>
                    <!--android:textColor="@color/text_title_color"-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp24"
                    android:paddingBottom="@dimen/dp10"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp16"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/gray"
                        android:text="电话"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:background="@null"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/text_title_color"
                        android:hint="请输入电话号码"
                        android:textColorHint="@color/gainsboro"/>
                    <TextView
                        android:id="@+id/tv_create_retract"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dp50"
                        android:drawableRight="@drawable/retract"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/blue"
                        android:text="收起"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp12"
                    android:drawablePadding="@dimen/dp6"
                    android:drawableLeft="@drawable/visit_time"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_title_color"
                    android:text="就诊时间"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_title_color"
                    android:text="2016-04-11"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp12"
                    android:drawablePadding="@dimen/dp6"
                    android:drawableLeft="@drawable/disease_generalization"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_title_color"
                    android:text="病症概括"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_title_color"
                    android:hint="请输入病症概括"
                    android:textColorHint="@color/gainsboro"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp12"
                    android:drawablePadding="@dimen/dp6"
                    android:drawableLeft="@drawable/related_pictures"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_title_color"
                    android:text="相关图片"/>

                <!--此处应改为横向的ListView或者是GridView-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_related_pictures"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/gainsboro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp16"
                    android:paddingBottom="@dimen/dp12">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp6"
                        android:drawableLeft="@drawable/pathography"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/text_title_color"
                        android:text="病情记录"/>
                    <TextView
                        android:id="@+id/tv_clinical_mould"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/dp12"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/blue"
                        android:text="[模板]"/>
                </RelativeLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/sp16"
                    android:textColor="@color/text_title_color"
                    android:hint="请输入病症概括"
                    android:textColorHint="@color/gainsboro"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp50"
                android:background="@color/gainsboro" />

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_no_network"
        android:visibility="gone" />

</LinearLayout>