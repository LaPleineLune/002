<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sort_article"
    android:layout_width="@dimen/dp100"
    android:layout_height="@dimen/dp120"
    android:background="@drawable/wireframe_sort"
    android:gravity="center"
    android:orientation="vertical">
<TextView
    android:id="@+id/tv_default_order"
    android:padding="@dimen/dp10"
    android:layout_width="@dimen/dp100"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="默认排序"
    android:textColor="@drawable/bg_text_color_order"/>

    <View
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/px1"
        android:background="@drawable/order_dividing_line"/>

    <TextView
        android:id="@+id/tv_time_order"
        android:padding="@dimen/dp10"
        android:layout_width="@dimen/dp100"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="按时间"
        android:textColor="@drawable/bg_text_color_order"/>
    <View
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/px1"
        android:background="@drawable/order_dividing_line"/>
    <TextView
        android:id="@+id/tv_conunt_order"
        android:padding="@dimen/dp10"
        android:layout_width="@dimen/dp100"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="按点击量"
        android:textColor="@drawable/bg_text_color_order"/>

</LinearLayout>